{% extends 'base.html.twig' %}

{% block body %}
    <div class="row block">
        <div class="col-md">
            <h3 class="align-middle">Current temperature in Vilnius:</h3>
        </div>
        <div class="col-md">
            <p class="text-center temperature align-middle">{{ message }} &#176; C</p>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .block {
            margin: 20px 0;
            padding-top: 20px;
            background: #efefef;
            border-radius: 10px;
        }
        .temperature {
            font-size: 24px;
        }
    </style>
{% endblock %}
